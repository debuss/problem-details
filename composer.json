{
  "name": "debuss-a/problem-details",
  "description": "An implementation of RFC 7807 - Problem Details for HTTP APIs",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "problem-details",
    "http",
    "api",
    "error-handling",
    "rfc-7807",
    "psr-15",
    "psr-7",
    "psr-17"
  ],
  "autoload": {
    "psr-4": {
      "ProblemDetails\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Alexandre Debussch√®re",
      "email": "alexandre.debusschere@hey.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "psr/http-server-middleware": "^1.0",
    "psr/http-factory": "^1.1"
  },
  "require-dev": {
    "phpstan/phpstan": "^2.1",
    "pestphp/pest": "^3.8",
    "mockery/mockery": "^1.6"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
